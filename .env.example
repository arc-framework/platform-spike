# =============================================================================
# A.R.C. Framework - Environment Configuration Template
# =============================================================================
# SECURITY WARNING: DO NOT use these example values in production!
# 1. Copy this file to .env
# 2. Generate strong passwords for all services
# 3. Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Core Services - PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=arc
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
POSTGRES_DB=arc_db

# -----------------------------------------------------------------------------
# Secrets Management - Infisical
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
INFISICAL_ENCRYPTION_KEY=CHANGE_ME_GENERATE_STRONG_KEY
INFISICAL_AUTH_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET
INFISICAL_SITE_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Feature Management - Unleash
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
UNLEASH_API_TOKEN=CHANGE_ME_GENERATE_STRONG_TOKEN
UNLEASH_CLIENT_TOKEN=CHANGE_ME_GENERATE_STRONG_TOKEN

# -----------------------------------------------------------------------------
# Observability - Grafana
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# -----------------------------------------------------------------------------
# Identity & Authentication - Kratos
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
KRATOS_SECRET_COOKIE=CHANGE_ME_GENERATE_STRONG_SECRET
KRATOS_SECRET_CIPHER=CHANGE_ME_GENERATE_STRONG_SECRET

# -----------------------------------------------------------------------------
# Application Services
# -----------------------------------------------------------------------------
SWISS_ARMY_PORT=8080
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Media & Real-Time Communications - LiveKit (arc-daredevil-voice)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET
# Set to your machine's external IP for local development
# Use 127.0.0.1 for localhost-only testing
LIVEKIT_NODE_IP=127.0.0.1

# -----------------------------------------------------------------------------
# OpenTelemetry Configuration (Optional Overrides)
# -----------------------------------------------------------------------------
