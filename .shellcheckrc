# ShellCheck configuration for A.R.C. Platform
# ==============================================================================
# Applied to shell scripts AND GitHub Actions inline scripts (via actionlint)
# ==============================================================================

# Disable low-priority rules for CI/CD operational scripts
disable=SC2086  # Quote variables to prevent globbing (safe in CI)
disable=SC2129  # Use { cmd1; cmd2; } >> file (style preference)
disable=SC2046  # Quote command substitution
disable=SC2034  # Unused variables (may be exported)
disable=SC2006  # Use $() instead of backticks
disable=SC2116  # Useless echo
disable=SC2005  # Useless echo
disable=SC2170  # Invalid number comparison
disable=SC2235  # Use { ..; } instead of (..)
disable=SC2126  # Use grep -c instead of grep | wc -l

# Enable external sources (for sourced scripts)
external-sources=true

