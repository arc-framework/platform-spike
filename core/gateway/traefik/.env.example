# Traefik Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Traefik API and Dashboard
TRAEFIK_API_INSECURE=true  # Set to false in production
TRAEFIK_API_DASHBOARD=true
TRAEFIK_API_DEBUG=false

# Log level
TRAEFIK_LOG_LEVEL=info
# TRAEFIK_LOG_LEVEL=debug  # Use for troubleshooting

# Entry points (ports)
TRAEFIK_WEB_PORT=80
TRAEFIK_WEB_SECURE_PORT=443
TRAEFIK_API_PORT=8080

# Docker provider
TRAEFIK_DOCKER_PROVIDER=true
TRAEFIK_DOCKER_EXPOSED_BY_DEFAULT=false
TRAEFIK_DOCKER_ENDPOINT=unix:///var/run/docker.sock

# TLS/SSL (for production)
# TRAEFIK_TLS_ENABLED=true
# TRAEFIK_TLS_CERT_PATH=/etc/traefik/ssl/cert.pem
# TRAEFIK_TLS_KEY_PATH=/etc/traefik/ssl/key.pem
# TRAEFIK_TLS_MIN_VERSION=VersionTLS13

# Middleware
# TRAEFIK_MIDDLEWARE_CORS_ENABLED=true
# TRAEFIK_MIDDLEWARE_RATELIMIT_ENABLED=true
# TRAEFIK_MIDDLEWARE_RATELIMIT_AVERAGE=100
# TRAEFIK_MIDDLEWARE_RATELIMIT_BURST=200

# Resource limits (optional)
# TRAEFIK_MEMORY_LIMIT=256m
# TRAEFIK_CPU_LIMIT=1

# Metrics (Prometheus integration)
TRAEFIK_METRICS_PROMETHEUS=true
TRAEFIK_METRICS_PROMETHEUS_ENTRYPOINT=metrics
TRAEFIK_METRICS_PROMETHEUS_ADDENTRYPOINT_LABELS=true

# Access logs
TRAEFIK_ACCESSLOG=true
TRAEFIK_ACCESSLOG_FILEPATH=/var/log/traefik/access.log

# Global configuration
TRAEFIK_GLOBAL_CHECKNEW_VERSION=false
TRAEFIK_GLOBAL_SEND_ANONYMOUS_USAGE=false

