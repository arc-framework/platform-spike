# OpenTelemetry Collector Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Collector ports and endpoints
OTEL_COLLECTOR_PORT_OTLP_GRPC=4317
OTEL_COLLECTOR_PORT_OTLP_HTTP=4318
OTEL_COLLECTOR_PORT_HEALTH=13133

# Receiver configuration
OTEL_RECEIVER_OTLP_GRPC_ENABLED=true
OTEL_RECEIVER_OTLP_HTTP_ENABLED=true

# Processor configuration
OTEL_PROCESSOR_BATCH_ENABLED=true
OTEL_PROCESSOR_BATCH_TIMEOUT=10s
OTEL_PROCESSOR_BATCH_SEND_BATCH_SIZE=1024

# Exporter configuration
OTEL_EXPORTER_JAEGER_ENDPOINT=jaeger:4317
OTEL_EXPORTER_PROMETHEUS_ENDPOINT=0.0.0.0:8889
OTEL_EXPORTER_LOKI_ENDPOINT=http://loki:3100/otlp

# Resource limits (optional)
# OTEL_MEMORY_LIMIT=512m
# OTEL_CPU_LIMIT=1

# Logging
OTEL_LOG_LEVEL=info
# OTEL_LOG_LEVEL=debug  # Use for troubleshooting

# Tracing configuration
OTEL_TRACE_SAMPLER=always_on
# OTEL_TRACE_SAMPLER=probabilistic  # Use for high-volume tracing
# OTEL_TRACE_SAMPLER_PROBABILITY=0.1

# Metrics configuration
OTEL_METRICS_ENABLED=true
OTEL_METRICS_INTERVAL=15s

# Logs configuration
OTEL_LOGS_ENABLED=true

# Extensions
OTEL_HEALTH_CHECK_ENABLED=true
OTEL_HEALTH_CHECK_PORT=13133

