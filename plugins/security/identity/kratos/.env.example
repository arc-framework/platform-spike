# Kratos Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Database connection (Kratos uses Postgres)
KRATOS_DSN=postgres://arc:postgres@postgres:5432/arc_db?sslmode=disable

# Service endpoints
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_ADMIN_URL=http://localhost:4434

# Self-service flows
KRATOS_SELFSERVICE_FLOWS_LOGIN_UI=http://localhost:3001/login
KRATOS_SELFSERVICE_FLOWS_REGISTRATION_UI=http://localhost:3001/registration
KRATOS_SELFSERVICE_FLOWS_RECOVERY_UI=http://localhost:3001/recovery
KRATOS_SELFSERVICE_FLOWS_SETTINGS_UI=http://localhost:3001/settings
KRATOS_SELFSERVICE_FLOWS_ERROR_UI=http://localhost:3001/error

# Courier/Email configuration (SMTP)
# KRATOS_COURIER_SMTP_HOST=smtp.example.com
# KRATOS_COURIER_SMTP_PORT=587
# KRATOS_COURIER_SMTP_FROM_ADDRESS=noreply@example.com
# KRATOS_COURIER_SMTP_FROM_NAME="A.R.C. Platform"
# KRATOS_COURIER_SMTP_USERNAME=username
# KRATOS_COURIER_SMTP_PASSWORD=password

# Identity & Security
# KRATOS_SECRETS_CIPHER=... (base64 encoded secret, 32 bytes)
# KRATOS_SECRETS_COOKIE=... (base64 encoded secret, 32 bytes)
# KRATOS_IDENTITY_SCHEMA_PATH=/etc/kratos/identity.schema.json

# API Keys/Auth tokens (optional)
# KRATOS_API_KEY_SECRET=your-secure-api-key

# Resource limits (optional)
# KRATOS_MEMORY_LIMIT=256m
# KRATOS_CPU_LIMIT=0.5

# Logging
KRATOS_LOG_LEVEL=info
# KRATOS_LOG_LEVEL=debug  # Use for troubleshooting

# Sessions
KRATOS_SESSION_LIFESPAN=24h
KRATOS_SESSION_REMEMBER_FOR=720h

