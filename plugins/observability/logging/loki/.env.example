# Loki Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Loki server configuration
LOKI_PORT=3100
LOKI_HOST=0.0.0.0

# Storage backend
# LOKI_STORAGE_TYPE=boltdb  # Local development
# LOKI_STORAGE_TYPE=s3      # Production (AWS S3 or S3-compatible)

# Local storage (for development)
LOKI_STORAGE_PATH=/loki

# S3 storage (optional; for production)
# LOKI_S3_ENDPOINT=s3.amazonaws.com
# LOKI_S3_BUCKET=my-loki-logs
# LOKI_S3_ACCESS_KEY_ID=...
# LOKI_S3_SECRET_ACCESS_KEY=...
# LOKI_S3_REGION=us-east-1

# Retention policy
LOKI_RETENTION_PERIOD=720h  # 30 days
LOKI_DELETION_ENABLED=true

# Resource limits (optional)
# LOKI_MEMORY_LIMIT=512m
# LOKI_CPU_LIMIT=1

# Logging
LOKI_LOG_LEVEL=info
# LOKI_LOG_LEVEL=debug  # Use for troubleshooting

# Query configuration
LOKI_MAX_CACHE_FRESHNESS_PER_QUERY=10m
LOKI_CACHE_CONFIG_ENABLE_FIFOCACHE=true

# Ingestion limits
LOKI_INGESTION_RATE_MB=10
LOKI_INGESTION_BURST_SIZE_MB=20

# Auth (multi-tenancy; optional)
# LOKI_AUTH_ENABLED=false
# LOKI_MULTI_TENANT_ENABLED=false

