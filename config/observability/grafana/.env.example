# Grafana Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Grafana server configuration
GF_SERVER_HTTP_PORT=3000
GF_SERVER_ROOT_URL=http://localhost:3000

# Security
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
# Change the default admin password! Use a strong, unique password in production.

# Session configuration
GF_SESSION_PROVIDER=memory
# For production, use: GF_SESSION_PROVIDER=postgres

# OAuth / SSO (optional)
# GF_AUTH_GENERIC_OAUTH_ENABLED=true
# GF_AUTH_GENERIC_OAUTH_CLIENT_ID=...
# GF_AUTH_GENERIC_OAUTH_CLIENT_SECRET=...
# GF_AUTH_GENERIC_OAUTH_AUTH_URL=...
# GF_AUTH_GENERIC_OAUTH_TOKEN_URL=...
# GF_AUTH_GENERIC_OAUTH_API_URL=...

# Database (optional; for multi-instance setups)
# GF_DATABASE_TYPE=postgres
# GF_DATABASE_HOST=postgres:5432
# GF_DATABASE_NAME=grafana_db
# GF_DATABASE_USER=grafana
# GF_DATABASE_PASSWORD=...

# Resource limits (optional)
# GF_MEMORY_LIMIT=512m
# GF_CPU_LIMIT=1

# Logging
GF_LOG_LEVEL=info
# GF_LOG_LEVEL=debug  # Use for troubleshooting

# Plugins
# GF_PLUGINS_ALLOW_UI_UPDATES=true

# Alerting (optional)
# GF_ALERTING_ENABLED=true
# GF_ALERTING_EXECUTE_ALERTS=true

# Feature toggles (optional; Grafana 7.0+)
# GF_FEATURE_TOGGLES_ENABLE=traceToMetrics,flameGraphPanel

# Reporting (optional)
# GF_REPORTING_ENABLED=true
# GF_REPORTING_RENDER_CONCURRENT_LIMIT=4

