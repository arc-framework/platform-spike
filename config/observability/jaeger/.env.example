# Jaeger Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Jaeger server configuration
JAEGER_PORT=16686
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_GRPC_PORT=4317
JAEGER_COLLECTOR_HTTP_PORT=14268

# Storage backend
JAEGER_STORAGE_TYPE=memory  # Local development
# For production, use: JAEGER_STORAGE_TYPE=elasticsearch or badger

# Elasticsearch storage (optional; for production)
# JAEGER_ES_SERVER_URLS=http://elasticsearch:9200
# JAEGER_ES_INDEX_PREFIX=jaeger
# JAEGER_ES_BULK_SIZE=200
# JAEGER_ES_BULK_WORKERS=5

# BadgerDB storage (optional; for production on a single machine)
# JAEGER_BADGER_EPHEMERAL=false
# JAEGER_BADGER_DIRECTORY_VALUE=/badger/data
# JAEGER_BADGER_DIRECTORY_KEY=/badger/key

# Sampling configuration
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1  # Sample all traces (1) or use probabilistic (0.1 for 10%)

# Resource limits (optional)
# JAEGER_MEMORY_LIMIT=512m
# JAEGER_CPU_LIMIT=1

# Logging
JAEGER_LOG_LEVEL=info
# JAEGER_LOG_LEVEL=debug  # Use for troubleshooting

# Metrics (Prometheus integration)
JAEGER_METRICS_BACKEND=prometheus
JAEGER_METRICS_PROMETHEUS_PORT=14269

# UI configuration
JAEGER_QUERY_BASE_PATH=/
JAEGER_QUERY_STATIC_FILES_PATH=/usr/local/share/jaeger/

# Collector configuration
JAEGER_COLLECTOR_ENABLED=true
JAEGER_COLLECTOR_GRPC_ENABLED=true
JAEGER_COLLECTOR_HTTP_ENABLED=true

# Security (optional)
# JAEGER_TLS_ENABLED=true
# JAEGER_TLS_CERT_PATH=/etc/jaeger/ssl/cert.pem
# JAEGER_TLS_KEY_PATH=/etc/jaeger/ssl/key.pem
# Postgres Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Database credentials (used by docker-compose.stack.yml)
POSTGRES_USER=arc
POSTGRES_PASSWORD=postgres
POSTGRES_DB=arc_db

# Database connection parameters
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Resource limits (optional; uncomment to enforce)
# POSTGRES_MEMORY_LIMIT=512m
# POSTGRES_CPU_LIMIT=1

# Backup and maintenance
# POSTGRES_BACKUP_PATH=/backups
# POSTGRES_BACKUP_INTERVAL=daily

# TLS/SSL (for production)
# POSTGRES_SSL_MODE=require
# POSTGRES_SSL_CERT_PATH=/etc/ssl/certs/server.crt
# POSTGRES_SSL_KEY_PATH=/etc/ssl/private/server.key

