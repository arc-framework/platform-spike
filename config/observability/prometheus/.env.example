# Prometheus Configuration (.env)
# Copy this file to .env and adjust values for your environment
# SECURITY: Do NOT commit this file to git. Add .env to .gitignore.

# Prometheus server configuration
PROMETHEUS_PORT=9090
PROMETHEUS_HOST=0.0.0.0

# Global scrape interval
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# Storage configuration
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_RETENTION_SIZE=0  # Unlimited unless set

# Resource limits (optional)
# PROMETHEUS_MEMORY_LIMIT=512m
# PROMETHEUS_CPU_LIMIT=1

# Logging
PROMETHEUS_LOG_LEVEL=info
# PROMETHEUS_LOG_LEVEL=debug  # Use for troubleshooting

# Alerting (optional)
# PROMETHEUS_ALERTMANAGER_URL=http://alertmanager:9093

# Remote storage (optional; for long-term storage)
# PROMETHEUS_REMOTE_WRITE_URL=http://remote-storage:9009/write
# PROMETHEUS_REMOTE_READ_URL=http://remote-storage:9009/read

# Web UI configuration
PROMETHEUS_EXTERNAL_URL=http://localhost:9090
PROMETHEUS_WEB_ENABLE_LIFECYCLE=true
PROMETHEUS_WEB_ENABLE_ADMIN_API=true

# Query configuration
PROMETHEUS_QUERY_MAX_SAMPLES=10000000
PROMETHEUS_QUERY_TIMEOUT=2m

